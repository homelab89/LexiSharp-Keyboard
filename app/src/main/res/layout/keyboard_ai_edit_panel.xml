<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/groupAiEditLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageButton
                android:id="@+id/btnAiPanelBack"
                style="@style/KeyboardImageButton"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/cd_return_main"
                android:src="@drawable/arrow_u_up_left_toggle" />

            <ImageButton
                android:id="@+id/btnAiPanelApplyPreset"
                style="@style/KeyboardImageButton"
                android:layout_marginStart="0dp"
                android:contentDescription="@string/cd_apply_preset_prompt"
                android:src="@drawable/magic_wand_toggle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageButton
                android:id="@+id/btnAiPanelCursorLeft"
                style="@style/KeyboardImageButton"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/cd_cursor_left"
                android:src="@drawable/arrow_left_toggle" />

            <ImageButton
                android:id="@+id/btnAiPanelCursorRight"
                style="@style/KeyboardImageButton"
                android:layout_marginStart="0dp"
                android:contentDescription="@string/cd_cursor_right"
                android:src="@drawable/arrow_right_toggle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnAiPanelNumpad"
                style="@style/KeyboardImageButton"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/cd_numpad"
                android:src="@drawable/numpad_toggle" />

            <ImageButton
                android:id="@+id/btnAiPanelSelect"
                style="@style/KeyboardImageButton"
                android:layout_marginStart="0dp"
                android:contentDescription="@string/cd_select_toggle"
                android:src="@drawable/selection_toggle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupAiEditRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineCenter"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageButton
                android:id="@+id/btnAiPanelSelectAll"
                style="@style/KeyboardImageButton"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/cd_select_all"
                android:src="@drawable/selection_all_toggle" />

            <ImageButton
                android:id="@+id/btnAiPanelUndo"
                style="@style/KeyboardImageButton"
                android:layout_marginStart="0dp"
                android:contentDescription="@string/cd_backspace"
                android:src="@drawable/backspace_toggle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageButton
                android:id="@+id/btnAiPanelCopy"
                style="@style/KeyboardImageButton"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/cd_copy"
                android:src="@drawable/copy_toggle" />

            <ImageButton
                android:id="@+id/btnAiPanelPaste"
                style="@style/KeyboardImageButton"
                android:layout_marginStart="0dp"
                android:contentDescription="@string/cd_paste"
                android:src="@drawable/selection_background_toggle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnAiPanelMoveStart"
                style="@style/KeyboardImageButton"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/cd_move_home"
                android:src="@drawable/arrow_line_left_toggle" />

            <ImageButton
                android:id="@+id/btnAiPanelMoveEnd"
                style="@style/KeyboardImageButton"
                android:layout_marginStart="0dp"
                android:contentDescription="@string/cd_move_end"
                android:src="@drawable/arrow_line_right_toggle" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
