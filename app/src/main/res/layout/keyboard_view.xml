<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:clipChildren="true"
    android:background="@drawable/bg_keyboard_container"
    android:paddingHorizontal="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="12dp">

    <FrameLayout
        android:id="@+id/layoutMainKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- 扩展按钮行 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowExtension"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <!-- 左侧按钮组 -->
        <ImageButton
            android:id="@+id/btnExt1"
            style="@style/KeyboardImageButton"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/desc_extension_button_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnExt2"
            style="@style/KeyboardImageButton"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/desc_extension_button_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnExt1"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 右侧按钮组 -->
        <ImageButton
            android:id="@+id/btnExt4"
            style="@style/KeyboardImageButton"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/desc_extension_button_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnExt3"
            style="@style/KeyboardImageButton"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/desc_extension_button_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnExt4"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 中央按钮 - 状态显示/波形动画区域 -->
        <FrameLayout
            android:id="@+id/btnExtCenter1"
            style="@style/KeyboardRectContainer"
            android:layout_width="0dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/desc_extension_center_button_1"
            android:clickable="true"
            android:focusable="true"
            android:clipChildren="true"
            android:clipToPadding="true"
            app:layout_constraintStart_toEndOf="@id/btnExt2"
            app:layout_constraintEnd_toStartOf="@id/btnExt3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/txtStatusText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:includeFontPadding="false" />

            <com.brycewg.asrkb.ui.widgets.WaveformView
                android:id="@+id/waveformView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:visibility="gone" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowTop"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageButton
            android:id="@+id/btnHide"
            style="@style/KeyboardImageButton"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/ext_btn_clipboard"
            android:src="@drawable/clipboard_toggle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnBackspace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/btnPostproc"
            style="@style/KeyboardImageButton"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/cd_postproc_toggle"
            android:src="@drawable/magic_wand"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnPromptPicker"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/btnBackspace"
            style="@style/KeyboardImageButton"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/cd_backspace"
            android:src="@drawable/backspace_toggle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/btnPromptPicker"
            style="@style/KeyboardImageButton"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/cd_ai_edit"
            android:src="@drawable/pencil_simple_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Middle function row moved to overlay to keep height unchanged -->

    <!-- Custom punctuation row -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <!-- 左侧占位按键（常规按钮类型，后续赋予功能） -->
        <ImageButton
            android:id="@+id/btnPunct1"
            style="@style/KeyboardImageButton"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/cd_numpad"
            android:src="@drawable/numpad_toggle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 合并标点键 A（点按=第1个，上滑=第2个） -->
        <com.brycewg.asrkb.ui.widgets.PunctKeyView
            android:id="@+id/btnPunct2"
            style="@style/KeyboardPunctKey"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/cd_punct_btn_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnPunct1"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 合并标点键 B（点按=第3个，上滑=第4个） -->
        <com.brycewg.asrkb.ui.widgets.PunctKeyView
            android:id="@+id/btnPunct3"
            style="@style/KeyboardPunctKey"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/cd_punct_btn_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnPunct4"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 右侧占位按键（常规按钮类型，后续赋予功能） -->
        <ImageButton
            android:id="@+id/btnPunct4"
            style="@style/KeyboardImageButton"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/cd_vendor_picker"
            android:src="@drawable/circles_four_toggle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 中央按钮 -->
        <Button
            android:id="@+id/btnExtCenter2"
            style="@style/KeyboardRectContainer"
            android:layout_width="0dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/desc_extension_center_button_2"
            android:text="@string/cd_space"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/btnPunct2"
            app:layout_constraintEnd_toStartOf="@id/btnPunct3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- Overlay: original function row placed around middle height without increasing total panel height -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="96dp"
        android:translationY="0dp">

        <ImageButton
            android:id="@+id/btnSettings"
            style="@style/KeyboardImageButton"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/cd_settings"
            android:src="@drawable/gear_toggle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnImeSwitcher"
            style="@style/KeyboardImageButton"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/cd_prompt_picker"
            android:src="@drawable/article_toggle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnSettings"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnEnter"
            style="@style/KeyboardImageButton"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/cd_enter"
            android:src="@drawable/key_return_toggle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnAiEdit"
            style="@style/KeyboardImageButton"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/cd_switch_ime"
            android:src="@drawable/keyboard_toggle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEnter"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/btnImeSwitcher"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowRecordingGestures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/btnGestureCancel"
            style="@style/KeyboardGestureButton"
            android:text="@string/label_recording_gesture_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btnGestureSend"
            style="@style/KeyboardGestureButton"
            android:text="@string/label_recording_gesture_send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <include
        android:id="@+id/layoutAiEditPanel"
        android:layout_gravity="top"
        layout="@layout/keyboard_ai_edit_panel"
        android:visibility="gone" />

    <include
        android:id="@+id/layoutNumpadPanel"
        android:layout_gravity="top"
        layout="@layout/keyboard_numpad_panel"
        android:visibility="gone" />

    <include
        android:id="@+id/layoutClipboardPanel"
        android:layout_gravity="top"
        layout="@layout/keyboard_clipboard_panel"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/groupMicStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:translationY="3dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_mic"
            app:srcCompat="@drawable/microphone"
            app:backgroundTint="?attr/colorSecondaryContainer"
            app:tint="?attr/colorOnSecondaryContainer"
            android:elevation="0dp"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            android:stateListAnimator="@null"
            app:fabCustomSize="72dp"
            app:maxImageSize="40dp" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@string/status_idle"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textFontWeight="500"
            android:includeFontPadding="false"
            android:visibility="gone" />
    </LinearLayout>


</FrameLayout>
