<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题区域 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GuideCard.Highlight">

            <LinearLayout
                android:padding="20dp"
                android:gravity="center"
                style="@style/GuideCardContent">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_quick_guide"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/guide_subtitle"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:alpha="0.8"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 主键盘图片区域 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GuideCard">

            <LinearLayout
                style="@style/GuideCardContent">

                <TextView
                    android:text="@string/guide_main_keyboard_title"
                    style="@style/GuideCardTitle" />

                <ImageView
                    android:contentDescription="@string/guide_main_keyboard_desc"
                    android:src="@drawable/instruct"
                    style="@style/GuideImage" />

                <TextView
                    android:text="@string/guide_main_keyboard_desc"
                    style="@style/GuideImageCaption" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 编辑面板图片区域 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GuideCard">

            <LinearLayout
                style="@style/GuideCardContent">

                <TextView
                    android:text="@string/guide_edit_panel_title"
                    style="@style/GuideCardTitle" />

                <ImageView
                    android:contentDescription="@string/guide_edit_panel_desc"
                    android:src="@drawable/edit_keyboard_view"
                    style="@style/GuideImage" />

                <TextView
                    android:text="@string/guide_edit_panel_desc"
                    style="@style/GuideImageCaption" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 数字符号键盘图片区域 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GuideCard">

            <LinearLayout
                style="@style/GuideCardContent">

                <TextView
                    android:text="@string/guide_numpad_title"
                    style="@style/GuideCardTitle" />

                <ImageView
                    android:contentDescription="@string/guide_numpad_desc"
                    android:src="@drawable/numpad_keyboard_view"
                    style="@style/GuideImage" />

                <TextView
                    android:text="@string/guide_numpad_desc"
                    style="@style/GuideImageCaption" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 核心功能说明 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GuideCard">

            <LinearLayout
                style="@style/GuideCardContent">

                <TextView
                    android:text="@string/guide_core_features_title"
                    style="@style/GuideCardTitle" />

                <!-- 长按录音 -->
                <LinearLayout
                    style="@style/GuideFeatureRow">

                    <ImageView
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:contentDescription="@string/guide_mic_icon_desc"
                        style="@style/GuideFeatureIcon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="@string/guide_long_press_title"
                            style="@style/GuideFeatureTitle" />

                        <TextView
                            android:text="@string/guide_long_press_desc"
                            style="@style/GuideFeatureDesc" />

                    </LinearLayout>

                </LinearLayout>

                <!-- AI后处理 -->
                <LinearLayout
                    style="@style/GuideFeatureRow">

                    <ImageView
                        android:src="@android:drawable/ic_menu_edit"
                        android:contentDescription="@string/guide_ai_icon_desc"
                        style="@style/GuideFeatureIcon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="@string/guide_ai_processing_title"
                            style="@style/GuideFeatureTitle" />

                        <TextView
                            android:text="@string/guide_ai_processing_desc"
                            style="@style/GuideFeatureDesc" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 悬浮球 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@android:drawable/ic_menu_compass"
                        android:contentDescription="@string/guide_floating_icon_desc"
                        style="@style/GuideFeatureIcon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="@string/guide_floating_title"
                            style="@style/GuideFeatureTitle" />

                        <TextView
                            android:text="@string/guide_floating_desc"
                            style="@style/GuideFeatureDesc" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 详细功能列表 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GuideCard">

            <LinearLayout
                style="@style/GuideCardContent">

                <TextView
                    android:text="@string/guide_detailed_features_title"
                    style="@style/GuideCardTitle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_detailed_features_content"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:alpha="0.9" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 首次使用步骤 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GuideCard.Secondary">

            <LinearLayout
                style="@style/GuideCardContent">

                <TextView
                    android:text="@string/guide_first_time_title"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    style="@style/GuideCardTitle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_instructions"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:alpha="0.9" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 查看完整文档按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewFullDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/btn_view_full_docs"
            style="@style/Widget.Material3.Button.TonalButton" />

    </LinearLayout>

</ScrollView>